<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sonicse.bjcp" >

    <application
        android:name="com.sonicse.bjcp.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.sonicse.bjcp.SplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sonicse.bjcp.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.sonicse.bjcp.MAINACTIVITY" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sonicse.bjcp.DetailActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.sonicse.bjcp.SearchActivity"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>
